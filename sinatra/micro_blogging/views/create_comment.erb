<h1>Create Comment</h1>

<div class="post_with_comments">
<%= @post.title  %><br>
<%= @post.date_created %><br>
<p class="content_post"><%= @post.content %></p><br>
</div>
 

<form action='/make_comment' method='post'>

	<label for='content'>Comment</label> <br>
	<textarea rows='10' cols='70' name='[comment]content'></textarea>
	<input type='submit' value='Add Comment'>

</form> 